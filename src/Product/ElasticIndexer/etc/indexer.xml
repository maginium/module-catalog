<?xml version="1.0" ?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Indexer/etc/indexer.xsd">
    <!-- Defines the 'products' indexer and links it to the 'Fulltext' model. -->
    <indexer class="Maginium\ProductElasticIndexer\Models\Indexer\Fulltext" id="products" view_id="products">
        <!-- Title for the indexer, supports translation. -->
        <title translate="true">Products</title>

        <!-- Description for the indexer, supports translation. -->
        <description
            translate="true"
        >Responsible for reindexing product data into the ElasticSearch index for optimized search and retrieval performance.</description>
    </indexer>
</config>
